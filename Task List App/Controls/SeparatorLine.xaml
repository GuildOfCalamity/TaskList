<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Task_List_App.Controls.SeparatorLine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Task_List_App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <!--
    <UserControl.Resources>
        <Brush x:Key="Line1Brush">#88191925</Brush>
        <Brush x:Key="Line2Brush">#88686874</Brush>
    </UserControl.Resources>
    -->
    <Grid Margin="0,10,0,15" HorizontalAlignment="Stretch">
        <Border
            Height="3"
            Margin="2,4,20,0"
            Background="{Binding Line1Brush, UpdateSourceTrigger=PropertyChanged}"
            CornerRadius="10" />
        <Border
            Height="2"
            Margin="0,0,20,0"
            Background="{Binding Line2Brush, UpdateSourceTrigger=PropertyChanged}"
            CornerRadius="10" />
    </Grid>

</UserControl>
