                        </SelectorBarItem>
                        <!--  Item # 3  -->
                        <SelectorBarItem Style="{StaticResource SelectorBarItemStyle}" Text="Selector 3">
                            <SelectorBarItem.Icon>
                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="{StaticResource Slideshow}" />
                            </SelectorBarItem.Icon>
                        </SelectorBarItem>
                        <!--  Item # 4  -->
                        <SelectorBarItem Style="{StaticResource SelectorBarItemStyle}" Text="Selector 4">
                            <SelectorBarItem.Icon>
                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="{StaticResource SpeedHigh}" />
                            </SelectorBarItem.Icon>
                        </SelectorBarItem>
                        <!--  Item # 5  -->
                        <SelectorBarItem Style="{StaticResource SelectorBarItemStyle}" Text="Selector 5">
                            <SelectorBarItem.Icon>
                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="{StaticResource LEDLight}" />
                            </SelectorBarItem.Icon>
                        </SelectorBarItem>
                    </SelectorBar>
                </StackPanel>
                <!--#endregion-->

                <extras:SeparatorLine />

                <extras:CompositionShadow
                    Margin="0,25,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BlurRadius="6"
                    Brush="{ThemeResource SecondaryBrush}"
                    OffsetX="3"
                    OffsetY="2">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Custom Controls" />
                </extras:CompositionShadow>

                <!--#region [EditBox]-->
                <Grid
                    Margin="0,20"
                    ColumnDefinitions="Auto,Auto,Auto,Auto"
                    ColumnSpacing="28">
                    <Grid.Transitions>
                        <TransitionCollection>
                            <EntranceThemeTransition FromHorizontalOffset="0" FromVerticalOffset="-300" />
                        </TransitionCollection>
                    </Grid.Transitions>
                    <Grid.Resources>
                        <Style TargetType="extras:EditBox">
                            <Setter Property="BorderBrush" Value="{ThemeResource SecondaryBorderBrush}" />
                        </Style>
                    </Grid.Resources>
                    <extras:EditBox
                        Title="Tasks Database"
                        Grid.Column="0"
                        Data="{x:Bind local:ControlsPage.LocalMethodSample(1)}"
                        DataChangedEvent="{x:Bind ViewModel.OnEditBoxDataChanged, Mode=OneWay}" />
                    <extras:EditBox
                        Title="Notes Database"
                        Grid.Column="1"
                        Data="{x:Bind local:ControlsPage.LocalMethodSample(2)}"
                        DataChangedEvent="{x:Bind ViewModel.OnEditBoxDataChanged, Mode=OneWay}" />
                    <extras:EditBox
                        Title="Last Message"
                        Grid.Column="2"
                        Data="{x:Bind ViewModel.LastMessage, Mode=OneWay}"
                        DataChangedEvent="{x:Bind ViewModel.OnEditBoxDataChanged, Mode=OneWay}" />
