                        Title="Format Time"
                        Grid.Column="3"
                        Data="{x:Bind Path=sys:String.Format('{0:dddd, MMMM d, yyyy}', sys:DateTime.Now)}"
                        DataChangedEvent="{x:Bind ViewModel.OnEditBoxDataChanged, Mode=OneWay}" />
                </Grid>
                <!--#endregion-->

                <extras:SeparatorLine />

                <!--#region [Font with ImageBrush]-->
                <extras:GroupBox
                    Margin="0,10"
                    HorizontalAlignment="Left"
                    BorderBrush="{ThemeResource SecondaryBorderBrush}"
                    FontSize="16"
                    Heading="GroupBox">
                    <extras:GroupBox.Transitions>
                        <TransitionCollection>
                            <EntranceThemeTransition FromHorizontalOffset="200" FromVerticalOffset="200" />
                        </TransitionCollection>
                    </extras:GroupBox.Transitions>
                    <Grid
                        Margin="10,5,10,10"
                        RowDefinitions="Auto,Auto,Auto,Auto"
                        RowSpacing="1">
                        <Grid.Resources>
                            <Style BasedOn="{StaticResource BaseTextBlockStyle}" TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="{StaticResource BlockFont}" />
                                <Setter Property="FontSize" Value="21" />
                                <Setter Property="Text" Value="WinUI needs a GroupBox" />
                                <Setter Property="FontWeight" Value="Normal" />
                            </Style>
                            <Style BasedOn="{StaticResource DefaultTextBoxStyle}" TargetType="TextBox">
                                <Setter Property="FontFamily" Value="{StaticResource BlockFont}" />
                                <Setter Property="FontSize" Value="20" />
                                <Setter Property="CornerRadius" Value="5" />
                                <Setter Property="IsHitTestVisible" Value="False" />
                                <Setter Property="Text" Value="WinUI needs a GroupBox" />
                                <Setter Property="FontWeight" Value="Normal" />
                            </Style>
                        </Grid.Resources>
                        <TextBlock Grid.Row="0">
                            <TextBlock.Foreground>
                                <ImageBrush ImageSource="/Assets/TextForeground1.png" Stretch="Fill" />
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock Grid.Row="1">
                            <TextBlock.Foreground>
                                <ImageBrush ImageSource="/Assets/TextForeground2.png" Stretch="Fill" />
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock Grid.Row="2">
                            <TextBlock.Foreground>
                                <ImageBrush ImageSource="/Assets/TextForeground3.png" Stretch="Fill" />
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBox Grid.Row="3">
                            <TextBox.Background>
                                <ImageBrush ImageSource="/Assets/TextForeground3.png" Stretch="Fill" />
                            </TextBox.Background>
                        </TextBox>
                    </Grid>
                </extras:GroupBox>
                <!--#endregion-->

                <extras:SeparatorLine />

                <!--#region [SpotLight]-->
                <extras:GroupBox
                    Margin="0,10"
                    HorizontalAlignment="Left"
                    BorderBrush="{ThemeResource SecondaryBorderBrush}"
                    FontSize="16"
                    Heading="SpotLight">
                    <extras:GroupBox.Transitions>
                        <TransitionCollection>
                            <EntranceThemeTransition FromHorizontalOffset="400" FromVerticalOffset="0" />
                        </TransitionCollection>
                    </extras:GroupBox.Transitions>
                    <Grid
                        Margin="10"
                        ColumnDefinitions="Auto,Auto"
                        ColumnSpacing="4"
                        RowDefinitions="Auto,Auto,Auto">
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="InnerAngle" />
                        <Slider
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="90"
                            Maximum="1.2"
                            Minimum="0"
                            StepFrequency="0.01"
                            Value="{x:Bind cpl.InnerAngle, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="OuterAngle" />
                        <Slider
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="90"
                            Maximum="1.7"
                            Minimum="0"
                            StepFrequency="0.01"
                            Value="{x:Bind cpl.OuterAngle, Mode=TwoWay}" />
                        <Border
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Width="160"
                            Margin="10"
                            BorderThickness="6"
                            CornerRadius="5">
                            <Border.Lights>
                                <!--
                                    The OnConnected event can cause an exception during runtime when the debugger is not attached.
                                -->
                                <extras:ColoredSpotLight
                                    x:Name="cpl"
                                    InnerColor="MediumOrchid"
                                    OuterColor="RoyalBlue" />
                            </Border.Lights>
                            <Border.BorderBrush>
                                <SolidColorBrush
                                    x:Name="spotBrush"
                                    extras:ColoredSpotLight.IsTarget="True"
                                    Color="White" />
                            </Border.BorderBrush>
                            <extras:CompositionShadow
                                Margin="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                BlurRadius="3"
                                Brush="Black"
                                OffsetX="2"
                                OffsetY="2">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="ColoredSpotLight" />
                            </extras:CompositionShadow>
                        </Border>
                    </Grid>
                </extras:GroupBox>

                <extras:SeparatorLine />
                <!--#endregion-->

                <!--#region [Custom Buttons and Flyout]-->
                <StackPanel Margin="0,10" Orientation="Horizontal">
                    <StackPanel.Resources>
                        <ThemeShadow x:Name="SharedShadow" />
                        <Flyout
                            x:Key="colorPickerFlyout"
                            AreOpenCloseAnimationsEnabled="True"
                            LightDismissOverlayMode="Off"
                            Placement="Top">
                            <RelativePanel>
                                <ColorPicker
                                    x:Name="colorPicker"
                                    IsColorChannelTextInputVisible="False"
                                    IsHexInputVisible="False" />
                                <Grid
                                    Margin="0,10,0,0"
                                    RelativePanel.AlignLeftWithPanel="True"
                                    RelativePanel.AlignRightWithPanel="True"
                                    RelativePanel.Below="colorPicker">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                        Grid.Column="0"
                                        MinWidth="100"
                                        HorizontalAlignment="Center"
                                        Click="ColorFlyoutButtonClick"
                                        Content="OK"
                                        FontFamily="{StaticResource CustomFont}" />
                                    <Button
                                        Grid.Column="1"
                                        MinWidth="100"
                                        HorizontalAlignment="Center"
                                        Click="ColorFlyoutButtonClick"
                                        Content="Cancel"
                                        FontFamily="{StaticResource CustomFont}" />
                                </Grid>
                            </RelativePanel>
                        </Flyout>
                        <Flyout
                            x:Key="sampleFlyout"
                            AreOpenCloseAnimationsEnabled="True"
                            LightDismissOverlayMode="Off"
                            Placement="Top">
                            <Flyout.FlyoutPresenterStyle>
                                <Style TargetType="FlyoutPresenter">
                                    <Setter Property="MinWidth" Value="550" />
                                    <Setter Property="CornerRadius" Value="5" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled" />
                                    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
                                    <Setter Property="IsTabStop" Value="True" />
                                    <Setter Property="TabNavigation" Value="Cycle" />
                                </Style>
                            </Flyout.FlyoutPresenterStyle>
                            <Grid
                                Margin="-11"
                                BorderBrush="{ThemeResource GradientBrushDiag}"
                                BorderThickness="8"
                                ColumnDefinitions="Auto,Auto,Auto"
                                ColumnSpacing="5"
                                CornerRadius="5"
                                RowDefinitions="Auto,Auto"
                                RowSpacing="5"
                                Shadow="{StaticResource SharedShadow}"
                                Translation="0,0,64">
                                <Grid.Background>
                                    <AcrylicBrush
                                        FallbackColor="#714aff"
                                        Opacity="0.75"
                                        TintColor="#202030"
                                        TintLuminosityOpacity="0.1"
                                        TintOpacity="0.75" />
                                </Grid.Background>
                                <Grid.Resources>
                                    <Style TargetType="ToggleSwitch">
                                        <Setter Property="Padding" Value="2" />
                                        <Setter Property="FontFamily" Value="{StaticResource CustomFont}" />
                                        <Setter Property="Margin" Value="10,10,1,1" />
                                        <Setter Property="OffContent" Value="Disabled" />
                                        <Setter Property="OnContent" Value="Enabled" />
                                    </Style>
                                </Grid.Resources>
                                <ToggleSwitch
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Header="Option #1"
                                    IsOn="False" />
                                <ToggleSwitch
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Header="Option #2"
                                    IsOn="False" />
                                <ToggleSwitch
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Header="Option #3"
                                    IsOn="False" />
                                <ToggleSwitch
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Header="Option #4"
                                    IsOn="False" />
                                <ToggleSwitch
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Header="Option #5"
                                    IsOn="False" />
                                <ToggleSwitch
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Header="Option #6"
                                    IsOn="False" />
                            </Grid>
                        </Flyout>
                    </StackPanel.Resources>
                    <Button
                        x:Name="springButton"
                        x:Uid="Button_Spring"
                        Margin="20,0,0,0"
                        Flyout="{StaticResource colorPickerFlyout}"
                        Loaded="Button_Loaded"
                        PointerEntered="Button_PointerEntered"
                        PointerExited="Button_PointerExited">
                        <Button.Foreground>
                            <SolidColorBrush x:Name="fgBrush" Color="{ThemeResource PressedColor1}" />
                        </Button.Foreground>
                        <Button.Background>
                            <SolidColorBrush x:Name="bgBrush" Color="{ThemeResource SpringFrom}" />
                        </Button.Background>
                        <Button.Resources>
                            <Storyboard x:Name="InitialColorStoryboard">
                                <ColorAnimation
                                    AutoReverse="False"
                                    Storyboard.TargetName="bgBrush"
                                    Storyboard.TargetProperty="Color"
                                    To="{ThemeResource SpringFrom}"
                                    Duration="0:0:0.5" />
                            </Storyboard>
                            <Storyboard x:Name="ToColorStoryboard">
                                <ColorAnimation
                                    AutoReverse="False"
                                    Storyboard.TargetName="bgBrush"
                                    Storyboard.TargetProperty="Color"
                                    From="{ThemeResource SpringFrom}"
                                    To="{ThemeResource SpringTo}"
                                    Duration="0:0:0.5" />
                            </Storyboard>
                            <Storyboard x:Name="FromColorStoryboard">
                                <ColorAnimation
                                    AutoReverse="False"
                                    Storyboard.TargetName="bgBrush"
                                    Storyboard.TargetProperty="Color"
                                    From="{ThemeResource SpringTo}"
                                    To="{ThemeResource SpringFrom}"
                                    Duration="0:0:0.5" />
                            </Storyboard>
                        </Button.Resources>
                    </Button>

                    <extras:ProgressButton
                        x:Name="progressButton"
                        Width="190"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        ButtonBusy="{x:Bind ViewModel.IsBusy, Mode=OneWay}"
                        ButtonCornerRadius="5"
                        ButtonEvent="{x:Bind ViewModel.ProgressButtonClickEvent, Mode=OneWay}"
                        ButtonText="Progress Button"
                        ProgressBrush="{StaticResource SampleBrush1}" />

                    <Button
                        Margin="-20,0,10,0"
                        Content="Simple Flyout Gradient"
                        Flyout="{StaticResource sampleFlyout}"
                        IsEnabled="{x:Bind ViewModel.IsBusy, Converter={StaticResource BooleanInverter}, Mode=OneWay}"
                        Style="{StaticResource GradientButton}" />

                    <Button
                        Margin="10,0,20,0"
                        Content="Custom Flyout Gradient"
                        Flyout="{StaticResource sampleControlFlyout}"
                        IsEnabled="{x:Bind ViewModel.IsBusy, Converter={StaticResource BooleanInverter}, Mode=OneWay}"
                        Style="{StaticResource GradientButton}" />

                    <Button
                        x:Name="configButton"
                        Width="48"
                        Height="48"
                        Margin="0,0,10,0"
                        VerticalAlignment="Stretch"
                        BorderThickness="0"
                        Command="{x:Bind ViewModel.OpenConfigCommand, Mode=OneWay}"
                        CornerRadius="5">
                        <Button.Content>
                            <AnimatedIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                AutomationProperties.AccessibilityView="Raw">
                                <animatedvisuals:AnimatedSettingsVisualSource />
                                <AnimatedIcon.FallbackIconSource>
                                    <FontIconSource
                                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                        FontSize="10"
                                        Glyph="{StaticResource Settings}"
                                        IsTextScaleFactorEnabled="False" />
                                </AnimatedIcon.FallbackIconSource>
                            </AnimatedIcon>
                        </Button.Content>
                    </Button>

                    <AppBarButton
                        x:Name="abButton"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        AnimatedIcon.State="Normal"
                        Label="Back"
                        PointerEntered="AppBarButton_PointerEntered"
                        PointerExited="AppBarButton_PointerExited"
                        PointerPressed="AppBarButton_PointerPressed"
                        PointerReleased="AppBarButton_PointerReleased">
                        <AnimatedIcon>
                            <animatedvisuals:AnimatedBackVisualSource />
                            <AnimatedIcon.FallbackIconSource>
                                <SymbolIconSource Symbol="Back" />
                            </AnimatedIcon.FallbackIconSource>
                        </AnimatedIcon>
                    </AppBarButton>
                </StackPanel>
                <!--#endregion-->

                <extras:SeparatorLine />

                <!--#region [CursorGrid]-->
                <extras:CursorGrid
                    MaxWidth="600"
                    HorizontalAlignment="Left"
                    EnableCursorOverride="{x:Bind GrandParentAreaToggleSwitch.IsOn, Mode=OneWay}"
                    InputSystemCursorShape="{x:Bind (input:InputSystemCursorShape)GrandParentAreaComboBox.SelectedValue, Mode=OneWay}">
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <StackPanel.Resources />
                        <ToggleSwitch x:Name="GrandParentAreaToggleSwitch" Header="Enable cursor override" />
                        <ComboBox x:Name="GrandParentAreaComboBox" IsEnabled="{x:Bind GrandParentAreaToggleSwitch.IsOn, Mode=OneWay}" />
                        <Button
                            Margin="30,0,0,0"
                            helper:ButtonExtensions.PointerOverBackgroundLightnessFactor="0.6"
                            helper:ButtonExtensions.PointerOverForegroundLightnessFactor="0.8"
                            helper:ButtonExtensions.PressedBackgroundLightnessFactor="1.3"
                            helper:ButtonExtensions.PressedForegroundLightnessFactor="0.1"
                            Background="{ThemeResource SpringTo}"
                            Content="Button Extension" />
                        <Border
                            Width="42"
                            Height="42"
                            Margin="40,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            BorderThickness="0">
                            <Border.Background>
                                <ImageBrush ImageSource="ms-appx:///Assets/Check_Logo.png" />
                            </Border.Background>
                        </Border>
                    </StackPanel>
                </extras:CursorGrid>
                <!--#endregion-->

                <extras:SeparatorLine />

                <!--#region [Tab UI using NavigationView]-->
                <Grid BorderThickness="0">
                    <Grid.Resources>
                        <!--#region [NavigationView]-->
                        <!--
                            Some of these properties will not be relevant when
                            the NavigationView is set to PaneDisplayMode="Top".
                        -->
                        <Thickness x:Key="NavigationViewHeaderMargin">12,0</Thickness>
                        <Thickness x:Key="NavigationViewItemInnerHeaderMargin">12,0</Thickness>
                        <Thickness x:Key="NavigationViewToggleBorderThickness">0</Thickness>
                        <x:Double x:Key="PaneToggleButtonSize">40</x:Double>
                        <x:Double x:Key="PaneToggleButtonHeight">36</x:Double>
                        <x:Double x:Key="PaneToggleButtonWidth">40</x:Double>
                        <x:Double x:Key="NavigationViewCompactPaneLength">48</x:Double>
                        <x:Double x:Key="NavigationViewTopPaneHeight">45</x:Double>
                        <x:Double x:Key="NavigationViewItemSeparatorHeight">4</x:Double>
