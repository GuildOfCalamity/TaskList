                        <Brush x:Key="NavigationViewSelectionIndicatorForeground">#FF5FB2F2</Brush>
                        <!--<Brush x:Key="NavigationViewContentBackground">#155FB2F2</Brush>-->
                        <Brush x:Key="TopNavigationViewItemBackgroundPointerOver">#3F5FB2F2</Brush>
                        <Brush x:Key="TopNavigationViewItemBackgroundSelectedPointerOver">#5F5FB2F2</Brush>
                        <Brush x:Key="TopNavigationViewItemSeparatorForeground">#FF5FB2F2</Brush>
                        <!--<Brush x:Key="TopNavigationViewItemBackgroundSelected">#155FB2F2</Brush>-->
                        <LinearGradientBrush x:Key="TopNavigationViewItemBackgroundSelected" StartPoint="0,0" EndPoint="0,5">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="0.0" Color="LightGray" />
                                <GradientStop Offset="0.04" Color="#437BA5" />
                                <GradientStop Offset="1.0" Color="#2B506B" />
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                        <!--#endregion-->
                    </Grid.Resources>
                    <NavigationView
                        x:Name="ControlsNavigationView"
                        Margin="0,0,50,0"
                        Background="{ThemeResource BackgroundBrush}"
                        CornerRadius="5"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="False"
                        IsTitleBarAutoPaddingEnabled="False"
                        PaneDisplayMode="Top"
                        SelectionChanged="ControlsNavigationSelectionChanged">
                        <NavigationView.PaneCustomContent>
                            <ToggleSwitch
                                Margin="20,0"
                                Header=""
                                IsOn="False"
                                OffContent="Navigation View Pane Custom Content"
                                OnContent="Navigation View Pane Custom Content" />
                        </NavigationView.PaneCustomContent>
                        <NavigationView.MenuItems>
                            <NavigationViewItemSeparator />
                            <NavigationViewItem
                                MinWidth="150"
                                HorizontalContentAlignment="Center"
                                Content="Tab1" />
                            <NavigationViewItemSeparator />
                            <NavigationViewItem
                                MinWidth="150"
                                HorizontalContentAlignment="Center"
                                Content="Tab2" />
                            <NavigationViewItemSeparator />
                            <NavigationViewItem
                                MinWidth="150"
                                HorizontalContentAlignment="Center"
                                Content="Tab3" />
                            <NavigationViewItemSeparator />
                        </NavigationView.MenuItems>
                        <NavigationView.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </NavigationView.HeaderTemplate>
                        <Frame
                            x:Name="ContentFrame"
                            Background="Transparent"
                            CacheSize="{x:Bind ControlsNavigationView.MenuItems.Count}">
                            <Frame.ContentTransitions>
                                <TransitionCollection>
                                    <NavigationThemeTransition>
                                        <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                                            <SlideNavigationTransitionInfo />
                                        </NavigationThemeTransition.DefaultNavigationTransitionInfo>
                                    </NavigationThemeTransition>
                                </TransitionCollection>
                            </Frame.ContentTransitions>
                        </Frame>
                    </NavigationView>
                </Grid>
                <!--#endregion-->

                <extras:SeparatorLine />

                <!--#region [Tab UI using TabView]-->
                <Grid BorderThickness="0">
                    <TabView
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AllowDropTabs="False"
                        Background="Transparent"
                        BorderBrush="{ThemeResource GradientBrushDiag}"
                        CanDragTabs="False"
                        CanReorderTabs="False"
                        CornerRadius="5"
                        IsAddTabButtonVisible="False">
                        <TabView.Resources>
                            <Thickness x:Key="TabViewButtonBorderThickness">1</Thickness>
                            <SolidColorBrush x:Key="TabViewItemHeaderBackgroundPointerOver" Color="#3F5FB2F2" />
                            <SolidColorBrush x:Key="TabViewItemHeaderBackgroundPressed" Color="#5F5FB2F2" />
                            <SolidColorBrush x:Key="TabViewItemHeaderBackgroundDisabled" Color="DimGray" />
                            <SolidColorBrush x:Key="TabViewItemBackgroundPointerOver" Color="#3F5FB2F2" />
                            <SolidColorBrush x:Key="TabViewSelectedItemBorderBrush" Color="#1F5FB2F2" />
                            <SolidColorBrush x:Key="TabViewButtonBackgroundActiveTab" Color="#3F5FB2F2" />
                            <SolidColorBrush x:Key="TabViewItemHeaderBackground" Color="#1F5FB2F2" />
                            <!--<SolidColorBrush x:Key="TabViewItemHeaderBackgroundSelected" Color="#3F5FB2F2" />-->
                            <LinearGradientBrush x:Key="TabViewItemHeaderBackgroundSelected" StartPoint="0,0" EndPoint="0,5">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Offset="0.0" Color="Gray" />
                                    <GradientStop Offset="0.1" Color="Blue" />
                                    <GradientStop Offset="1.0" Color="Navy" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </TabView.Resources>
                        <TabView.TabStripHeader>
                            <Grid x:Name="HeaderInset" Background="Transparent">
                                <Image
                                    x:Name="imgHeader"
                                    Height="24"
                                    Source="/Assets/Check_Logo.png"
                                    Stretch="UniformToFill" />
                            </Grid>
                        </TabView.TabStripHeader>
                        <TabView.TabStripFooter>
                            <Grid MinWidth="200" Background="Transparent">
                                <TextBlock
                                    Margin="10,4,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="{StaticResource SmallFontSize}"
                                    Text="This could be used for status messages." />
                            </Grid>
                        </TabView.TabStripFooter>
                        <!--  1st Tab  -->
                        <TabViewItem Header="1st Tab" IsClosable="False">
                            <TabViewItem.IconSource>
                                <FontIconSource Glyph="{StaticResource GridView}" />
                            </TabViewItem.IconSource>
                            <TextBlock
                                Margin="30,20"
                                FontSize="{StaticResource HugeFontSize}"
                                Text="Tab #1 Content" />
                        </TabViewItem>
                        <!--  2nd Tab  -->
                        <TabViewItem Header="2nd Tab" IsClosable="False">
                            <TabViewItem.IconSource>
                                <FontIconSource Glyph="{StaticResource AllApps}" />
                            </TabViewItem.IconSource>
                            <TextBlock
                                Margin="30,20"
                                FontSize="{StaticResource HugeFontSize}"
                                Text="Tab #2 Content" />
                        </TabViewItem>
                        <!--  3rd Tab  -->
                        <TabViewItem Header="3rd Tab" IsClosable="False">
                            <TabViewItem.IconSource>
                                <FontIconSource Glyph="{StaticResource ActionCenter}" />
                            </TabViewItem.IconSource>
                            <TextBlock
                                Margin="30,20"
                                FontSize="{StaticResource HugeFontSize}"
                                Text="Tab #3 Content" />
                        </TabViewItem>
                    </TabView>
                </Grid>
                <!--#endregion-->

                <!--  spacer for bottom page margin  -->
                <Rectangle
                    Width="1"
                    Height="160"
                    Fill="Transparent" />

            </StackPanel>

        </ScrollViewer>

        <!--  Messages [Row 2]  -->
        <extras:AutoCloseInfoBar
            x:Name="infoBar"
            Grid.Row="1"
            Margin="0,0,20,20"
            VerticalAlignment="Bottom"
            AutoCloseInterval="5000"
            Background="{ThemeResource InfoBarBrush}"
            IsOpen="False"
            Severity="Informational" />

    </Grid>
</Page>
